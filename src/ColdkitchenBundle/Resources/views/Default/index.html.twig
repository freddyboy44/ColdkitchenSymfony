            {% block backstretch %}
                function BackStretchen(){
                    $('.test').backstretch([
                        {% for foto in fotos|shuffle %}
                        {% set url = 'uploads/achtergrondfotos/' ~ foto.filename %}
                            "{{ image(url).grayscale().brightness(50).contrast(-10).CropResize(1350,900, 'transparent') }}"
                            {{ loop.last ? '' : ',' }}
                        {% endfor %}
                    ], {duration: 7000, fade: 450});
                }
                function BackStretchenMobile(){
                    $('.test').backstretch([
                        {% for foto in fotos|shuffle %}
                            {% set url = 'uploads/achtergrondfotos/' ~ foto.filename %}
                            "{{ image(url).grayscale().brightness(50).contrast(-10).CropResize(600,400, 'transparent') }}"
                            {{ loop.last ? '' : ',' }}
                        {% endfor %}
                    ], {duration: 7000, fade: 450});
                }
                function BackStretchenTablet(){
                    $('.test').backstretch([
                        {% for foto in fotos|shuffle %}
                            {% set url = 'uploads/achtergrondfotos/' ~ foto.filename %}
                            "{{ image(url).grayscale().brightness(50).contrast(-10).CropResize(900,600, 'transparent') }}"
                            {{ loop.last ? '' : ',' }}
                        {% endfor %}
                    ], {duration: 7000, fade: 450});
                }
                    
                {% endblock %}

           

                $(document).ready(function(){
                    ZetGoeieGrootte();
                    if($(window).innerWidth()<500){
                        BackStretchenMobile();
                    }else{
                        if($(window).innerWidth()<900){
                            BackStretchenTablet();    
                        }else{
                            BackStretchen();
                        }
                    }
                    
                    $('.nextslide').click(function(){
                    $.fn.fullpage.moveSectionDown();
                });
                })
                $(window).resize(function(){
                    ZetGoeieGrootte();
                    if($(window).innerWidth()<500){
                        BackStretchenMobile();
                    }else{
                        BackStretchen();    
                    }
                })
            
            

                  function initialize() {
                    var mapCanvas = document.getElementById('map-canvas');
                    var mapOptions = {
                      center: new google.maps.LatLng(51.2196677,3.2466486),
                      zoom: 15,
                      mapTypeId: google.maps.MapTypeId.ROADMAP
                    }
                    var map = new google.maps.Map(mapCanvas, mapOptions)
                    var iconBase = 'https://maps.google.com/mapfiles/kml/shapes/';
                    var marker = new google.maps.Marker({
                      position: new google.maps.LatLng(51.2196677,3.2466486),
                      map: map,
                      icon: '{{ image("@ColdkitchenBundle/Resources/public/images/logomap.png") }}'
                    });

                    google.maps.event.addListener(marker, 'click', function() { 
                        onItemClick(event, marker); 
                      }); 
                    
                    // Info window trigger function 
                    function onItemClick(event, pin) { 
                      // Create content  
                      //alert(0);
                      var contentString = "Padel Club Brugge<br/><br/>Geralaan<br/><br/>0456/78.90.12"; 
                      console.log(contentString);
                      infowindow = new google.maps.InfoWindow(); 
                      // Replace our Info Window's content and position 
                      infowindow.setContent(contentString); 
                      infowindow.setPosition(pin.position); 
                      infowindow.open(map) 
                    } 

                  }


