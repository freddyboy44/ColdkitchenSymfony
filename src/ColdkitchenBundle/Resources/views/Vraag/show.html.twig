{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Vraag</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ entity.naam }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Telefoon</th>
                <td>{{ entity.telefoon }}</td>
            </tr>
            <tr>
                <th>Tekst</th>
                <td>{{ entity.tekst }}</td>
            </tr>
            <tr>
                <th>Datumverstuurd</th>
                <td>{{ entity.datumVerstuurd|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('vraag') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('vraag_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
